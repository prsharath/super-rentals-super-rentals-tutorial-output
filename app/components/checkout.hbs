<article class="rental">
  <Rental::Image src={{@checkout.rental.image}} alt="A picture of {{@checkout.rental.title}}" />

  <div class="details">
    <h3>
      <LinkTo @route="rental" @model={{@checkout.rental}}>
        {{@checkout.rental.title}}
      </LinkTo>
    </h3>
    <div class="detail owner">
      <span>Owner:</span> {{@checkout.rental.owner}}
    </div>
    <div class="detail type">
      <span>Type:</span> {{@checkout.rental.type}}
    </div>
    <div class="detail location">
      <span>Location:</span> {{@checkout.rental.city}}
    </div>
    <div class="detail bedrooms">
      <span>Number of bedrooms:</span> {{@checkout.rental.bedrooms}}
    </div>
    <div class="detail nightlyrate">
      <span>Nightly Rate:</span> {{format-currency @checkout.rental.nightlyrate}}
    </div>
    <div class="detail quantity">
      <span>Quantity:</span> <Input style="display: inline;" onchange={{action "updateprice" @checkout}} type='number' min="1" @value={{@checkout.quantity}} />
    </div>
    <div class="detail price">
      <span>Price:</span> {{format-currency @checkout.total}}
    </div>
    <div class="detail remove" style='position: absolute;
    float: right;
    right: 173px;
    font-size: 25px;
    color: #404064'>
      <button onclick={{action "removeFromCart" @checkout}}>X</button> 
    </div>
  </div>

</article>